<h2>New Article</h2>
<%= link_to "About", welcome_about_path %>
<%= link_to "Home", root_path %>
<br/>
  <% @article.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
  <% end %>
<br/>
<%= form_for @article do |f|  %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
    <%= f.submit %>

<% end %>